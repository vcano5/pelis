<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Redirigiendo..</title>
	<%- include('../partials/head.ejs') %>
</head>
<body>
	<%- include('../partials/header.ejs') %>
	
	<span id="alert"></span>
	<div class="jumbotron container">
		<p class="display-1">Redireccionando</p>
		<span>En 10 segundos sera redireccionado automaticamente a <a href="https://www.google.com">google.com</a> </span>
		<div class="input-group fixed-bottom pb-5 justify-content-center">
			<button class="btn btn-secondary mx-3" id="accept">Ir ahora</button>
			<button class="btn btn-primary" id="back"><img src="/images/arrow-left.svg"> Regresar</button>
		</div>
		<i class="fa fa-location-arrow" aria-hidden="true"></i>

	</div>
	
</body>

<script>
	document.querySelector('button#back').addEventListener('click', e => goBack(e), true)

	setTimeout(function() {
		document.location.href = 'https://www.google.com.mx'
	}, 10000)

	function goBack(e) {
		e.preventDefault();
		window.history.back();
	}

	function getLocation() {
		if(navigator.geolocation) {
			navigator.geolocation.getCurrentPosition(savePosition);
		}
		else {
			alert.textContent = 'Geolocation is not supported by this browser';
		}
		
	}

	function savePosition(pos) {
		alert(pos);
	}
</script>
</html>